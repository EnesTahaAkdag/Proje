@model Proje.Models.EntitiyFramework.Kullanici

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Güncelle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Kullanıcı</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-md-10">
                <label>Kullanıcı Adı</label>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>Kullanıcı Şifresi</label>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>Kullanıcı Rolü</label><br />
                <label class="custom-radio">
                    @Html.RadioButtonFor(model => model.Role, "Admin", new { @class = "radio-input" })
                    <span class="radio-style"></span>
                    Admin
                </label>
                <label class="custom-radio">
                    @Html.RadioButtonFor(model => model.Role, "User", new { @class = "radio-input" })
                    <span class="radio-style"></span>
                    Kullanıcı

                </label>
            </div>
        </div>
        @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
                <a href="~/Kullanici/Index" class="btn btn-primary" id="iptalButton">Kullanıcı Listesine Dön</a>
            </div>
        </div>
    </div>
}
