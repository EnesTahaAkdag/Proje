@model Proje.Models.EntitiyFramework.Kullanici
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Profil</h2>

<div>
    <h4>Kullanıcı</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Kullanıcı Adı</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            <label>Kullanıcı Şifresi</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt>
            <label>Kullanıcı Rolü</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Role)
        </dd>

    </dl>
</div>
<p>
    <a class="btn btn-success" href="/Kullanici/Edit/@Model.Id">Güncelle</a><label>|</label>
    <a href="~/Kullanici/Index" class="btn btn-primary" id="iptalButton">Kullanıcı Listesine Dön</a>
</p>
