@using Proje.Models.EntitiyFramework
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a class="btn btn-success" href="/Departman/DepartmanForm">Yeni Kayıt Ekle</a>
<br>
<br>
@{Html.RenderAction("ToplamMaas", "Personel");}
<h2>Departman Listesi</h2>


<table class="table table-bordered" id="tblDepartmanlar">
    <thead>
        <tr>
            <th>Departman ID</th>
            <th>Departman Adı</th>
            <th>Güncelle</th>
            <th>Sil</th>
            <th>Personeller</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var departman in Model)
        {
            <tr>
                <td>@departman.Id</td>
                <td>@departman.Name</td>
                <td><a class="btn btn-primary" href="/Departman/Guncelle/@departman.Id">Güncelle</a></td>
                <td><a data-id="@departman.Id" class="btn btn-warning btnDepartmanSil">Sil</a></td>
                <td>
                    @Ajax.ActionLink("Personelleri Göster", "PersonelleriListele", "Personel", new { id = departman.Id }, new AjaxOptions
                    {
                        HttpMethod = "GET",
                   UpdateTargetId = "personelListesi"
                    }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="personelListesi"></div>


