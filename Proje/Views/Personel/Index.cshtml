@model List<Proje.Models.EntitiyFramework.Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    img.yuvarlak {
        border-radius: 50%;
    }
</style>
@Html.ActionLink("Yeni Personel", "Yeni", null, new { @class = "btn btn-success" })
<br>
<br>
@{Html.RenderAction("ToplamMaas", "Personel");}
<h2>Personel Listesi</h2>
<table class="table table-bordered" id="tblPersoneller">
    <thead>
        <tr>
            <th>Personel Resmi</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Departman</th>
            <th>Maaş</th>
            <th>Yaş</th>
            <th>Doğum Tarihi</th>
            <th>Cinsiyet</th>
            <th>Evlilik Durumu</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var personel in Model)
        {
            <tr style="text-align:center">
                <td height="100" width="150"><img src="@Url.Content(personel.FileName)" alt="@personel.FileName" style="height:100px; width:100px; object-fit:contain;" /></td>
                <td style="vertical-align:middle;">@personel.Name</td>
                <td style="vertical-align:middle;">@personel.SurName</td>
                @if (personel.Departman == null)
                {
                    <td></td>
                }
                else
                {
                    <td style="vertical-align:middle;">@personel.Departman.Name</td>
                }
                <td style="vertical-align:middle;">@personel.Wage.Value.ToString("0,0.00")</td>
                <td style="vertical-align:middle;">@(DateTime.Now.Year - personel.BirthDate.Value.Year)</td>
                <td style="vertical-align:middle;">@personel.BirthDate.Value.ToString("dd-MM-yyyy")</td>
                <td style="vertical-align:middle;">@(personel.Gender == true ? "Erkek" : "Kadın")</td>
                <td style="vertical-align:middle;">@(personel.Married == true ? "Evli" : "Bekar")</td>
                <td style="vertical-align:middle;"><a href="@Url.Action("Guncelle","Personel", new { id = personel.Id })" class="btn btn-success">Güncelle</a></td>
                <td style="vertical-align:middle;"><a class="btn btn-danger btnPersonelSil" data-id="@personel.Id">Sil</a></td>
            </tr>

        }
    </tbody>
</table>
