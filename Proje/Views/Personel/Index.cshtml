@model List<Proje.Models.EntitiyFramework.Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.ActionLink("Yeni Personel", "Yeni", null, new { @class = "btn btn-success" })
<br>
<br>
@{Html.RenderAction("ToplamMaas", "Personel");}
<h2>Personel Listesi</h2>
<table class="table table-bordered" id="tblPersoneller">
    <thead>
        <tr>
            <th>Personel Resmi</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Departman</th>
            <th>Maaş</th>
            <th>Yaş</th>
            <th>Doğum Tarihi</th>
            <th>Cinsiyet</th>
            <th>Evlilik Durumu</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var personel in Model)
        {
            <tr style="text-align:center">
                <td><img src="@personel.FileName" width="100" height="100"/></td>
                <td>@personel.Name</td>
                <td>@personel.SurName</td>
                @if (personel.Departman == null)
                {
                    <td></td>
                }
                else
                {
                    <td>@personel.Departman.Name</td>
                }
                <td>@personel.Wage.Value.ToString("0,0.00")</td>
                <td>@(DateTime.Now.Year - personel.BirthDate.Value.Year)   </td>
                <td>@personel.BirthDate.Value.ToString("dd-MM-yyyy")</td>
                <td>@(personel.Gender == true ?"Erkek":"Kadın")</td>
                <td>@(personel.Married==true?"Evli":"Bekar")</td>
                <td>@Html.ActionLink("Güncelle", "Guncelle", new { id = personel.Id }, new { @class = "btn btn-success" })</td>
                <td><a class="btn btn-danger btnPersonelSil" data-id="@personel.Id">Sil</a></td>
            </tr>
        }
    </tbody>
</table>