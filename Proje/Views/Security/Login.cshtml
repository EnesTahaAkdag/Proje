@model Proje.Models.EntitiyFramework.Kullanici
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2>Lütfen Giriş Yapın</h2>
        @using (Html.BeginForm("Login", "Security", FormMethod.Post))
        {
            <div class="form-group isim">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Kullanıcı Adı", required = "required", @stringlength = "50" })
            </div>
            <div class="form-group sifre">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Parola", required = "required", @maxlength = "10", @minlength = "4" })
                @ViewBag.Mesaj
                @Html.HiddenFor(m=>m.Id)
                </div>
            <button type="submit" class="btn btn-block btn-success">Giriş Yap</button>
        }
    </div>
</body>
</html>
